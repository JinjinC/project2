{{#extend "layout"}}

    {{#replace "sidebar"}}
    <div class="sidebar-hidden">
        {{> sidebar this conditionClass=conditionClass}}
    </div>
    {{/replace}}

    {{#replace "app_content"}}

    {{#append "scripts"}}
    <script src="lib/select2/select2.min.js"></script>
    <script src="lib/jquery.maskedinput/jquery.maskedinput.min.js"></script>
    <script src="lib/moment/moment.js"></script>
    <script src="lib/eonasdan-bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js"></script>
    <script src="lib/twitter-bootstrap-wizard/jquery.bootstrap.wizard.min.js"></script>
    <script>
        (function(){
            $('header').hide();
            $('.logo').hide();
            $('.app_status').hide();
            $('#myModal').addClass("in").addClass("show-shadow").show();
        })();

        $(document).ready(function  () {
            $('.send-btn button').click(function  () {
                $('.send-btn').hide();
                $('.repeat-btn').show();
                $('.checkcode-form').show();
            });

        });
    </script>
    {{/append}}
        <div id="myModal" class="modal fade" tabindex="-1" role="dialog" aria-labelleby="myModallabel" aria-hidden="true">
            <div class="modal-dialog sign-modal" id="myModalDialog">
                <div class="modal-content myModalContent">
                    <div class="modal-header myModalHeader">
                        <i class="iconfont login-icon">&#xe616;</i>
                        <p><span id="modal-title">注册 OneAPM</span></p>
                    </div>
                    <div class="modal-body myModalBody">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <section class="widget">
                                <header>
                                </header>
                                <div class="body">
                                    <form action="" class="form-horizontal mt-md">
                                        <fieldset>
                                            <div class="form-group">
                                                <div class="col-md-8 col-sm-8 col-xs-12 col-md-offset-2 col-sm-offset-2 col-xs-offset-0">
                                                    <input type="text" class="form-control" placeholder="邮箱">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="col-md-8 col-sm-8 col-xs-12 col-md-offset-2 col-sm-offset-2 col-xs-offset-0">
                                                    <input type="password" class="form-control" placeholder="登录密码">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="col-md-8 col-sm-8 col-xs-12 col-md-offset-2 col-sm-offset-2 col-xs-offset-0">
                                                    <input type="text" class="form-control" placeholder="姓名">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="col-md-8 col-sm-8 col-xs-12 col-md-offset-2 col-sm-offset-2 col-xs-offset-0">
                                                    <input type="text" class="form-control" placeholder="企业名称">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="col-md-8 col-sm-8 col-xs-12 col-md-offset-2 col-sm-offset-2 col-xs-offset-0">
                                                    <input type="text" class="form-control" placeholder="手机号码">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="col-md-8 col-sm-8 col-xs-12 col-md-offset-2 col-sm-offset-2 col-xs-offset-0">
                                                    <div class="send-btn text-center">
                                                        <button class="btn btn-xs btn-info" type="button">获取短信验证码</button>
                                                    </div>
                                                    <div class="repeat-btn">
                                                        <span>验证码已发送至您的手机</span>
                                                        <button class="btn btn-info pull-right btn-xs">重新发送</button>
                                                        <span class="count-time pull-right">10s后 </span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group checkcode-form">
                                                <div class="col-md-8 col-sm-8 col-xs-12 col-md-offset-2 col-sm-offset-2 col-xs-offset-0">
                                                    <input type="text" class="form-control" placeholder="短信验证码">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="col-md-8 col-sm-8 col-xs-12 col-md-offset-2 col-sm-offset-2 col-xs-offset-0 text-center">
                                                    <button class="btn btn-md btn-success">注册</button>
                                                </div>
                                            </div>
                                        </fieldset>
                                    </form>
                                </div>
                            </section>
                        </div>
                   </div>               
                </div>
            </div>
            <div class="home-footer">
                <a href="index.html" id="back"><span class="only-link">返回</span></a>
            </div>
        </div>
    {{/replace}}
{{/extend}}