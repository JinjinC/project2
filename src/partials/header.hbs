    <script>
        $(function(){
            $('#goHome').click(function(e){
                 
                $('#goHome-content').toggle();
                if ($('#go_img').hasClass("icon-down")){
                   $('#go_img').removeClass("icon-down").addClass("icon-up"); 
                }
                else {
                    $('#go_img').removeClass("icon-up").addClass("icon-down"); 

                }
                e.stopPropagation();
                return false;
            })
            
            $(document).click(function(){
                $('#goHome-content').hide();
                $('#go_img').removeClass("icon-up").addClass("icon-down"); 

            })

            $('#goHome-content').click(function(e){
                $('#goHome-content').show();
                $('#go_img').removeClass("icon-down").addClass("icon-up"); 
                e.stopPropagation();
            })

            $('#appOption').click(function(){

                $('#app_menu').toggle();
                if ($('#go_app').hasClass("icon-down")){
                   $('#go_app').removeClass("icon-down").addClass("icon-up"); 
                }
                else {
                    $('#go_app').removeClass("icon-up").addClass("icon-down"); 

                }
                return false;
            })

            $(document).click(function(){
                $('#app_menu').hide();
                $('#go_app').removeClass("icon-up").addClass("icon-down"); 

            })


    })

    </script>
   