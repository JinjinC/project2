<script>
       $(function(){

        $('#goHome').click(function(e){
            $('#appOption_menu').hide();
            $('#icon_down1').show(); 
            $('#icon_up1').hide();
            if ($('#goHome-content').css('display') == 'none') {
                $('#goHome-content').show();
                $('#icon_up').show();
                $('#icon_down').hide(); 
                
            }else{
                $('#goHome-content').hide();
                $('#icon_down').show(); 
                $('#icon_up').hide();
            }


            e.stopPropagation();
        })

         $('#appOption').click(function(e){
            $('#goHome-content').hide();
            $('#icon_down').show(); 
            $('#icon_up').hide();
            if ($('#appOption_menu').css('display') == 'none') {
                $('#appOption_menu').show();
                $('#icon_down1').hide(); 
                $('#icon_up1').show();

            }else{
                $('#appOption_menu').hide();
                $('#icon_down1').show(); 
                $('#icon_up1').hide();
            }
            e.stopPropagation();

         })
         $(document).click(function(e){
                $('#goHome-content').hide();
                $('#icon_down').show(); 
                $('#icon_up').hide();
                $('#appOption_menu').hide();
                $('#icon_down1').show(); 
                $('#icon_up1').hide(); 
                e.stopPropagation();
         })
         $('#goHome-content').click(function(e){
                $('#goHome-content').show();
                $('#appOption_menu').hide();
                $('#icon_down').hide(); 
                $('#icon_up').show();
                e.stopPropagation();
         })

         $('#noItem').css("opacity","0.65");
         $('#noItem').mouseover(function(){
            // $('#itemCon').hide();
            $('#iconplus').show();
         })
         $('#noItem').mouseout(function(){
            // $('#itemCon').show();
            $('#iconplus').hide();
         })
         $('#iconplus').click(function(){
            location.href="add_application.html";
         })

    })


</script>

