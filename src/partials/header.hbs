    <script>
        $(function(){
            $('#goHome').click(function(e){
                 
                $('#goHome-content').toggle();
                e.stopPropagation();
                if ($('#go_img').hasClass("icon-up")){
                   $('#go_img').removeClass("icon-up").addClass("icon-down"); 
                }
                else {
                    $('#go_img').removeClass("icon-down").addClass("icon-up");
                }
                 
            })
            
            $(document).click(function(){
                $('#goHome-content').hide();
                $('#go_img').removeClass("icon-down").addClass("icon-up");

            })

            $('#goHome-content').click(function(e){
                $('#goHome-content').show();
                e.stopPropagation();

                $('#go_img').removeClass("icon-up").addClass("icon-down"); 
                $('#go-home-icon').removeClass("glyphicon-chevron-up").addClass("glyphicon-chevron-down");
                
            })
    })

    </script>
   