{{#extend "layout"}}

    {{#replace "sidebar"}}
        {{> sidebar this conditionClass=conditionClass active="load"}}
    {{/replace}}

    {{#replace "app_content"}}
    <div class="loader-wrap hiding for-show">
        {{!-- <i class="fa fa-circle-o-notch fa-spin"></i> --}}
        <i class="fa fa-spinner fa-spin"></i>
    </div>
    <h2 class="page-title"><span>加载中 <small>loading 样式</small></span></h2>
    <div class="row">
        <div class="col-lg-4 col-md-4 col-sm-12">
            <section class="widget" style="min-height: 200px">
                <header>
                    <h5>响应时间</h5>
                </header>
                <div class="body">
                    <div class="loader animated fadeIn handle">
                        <span class="spinner">
                            <i class="fa fa-spinner fa-spin"></i>
                            <span class="load-text">加载中</span>
                        </span>
                    </div>
                </div>
            </section>
        </div>
        <div class="col-lg-8 col-md-8 col-sm-12">
            <a href="#" data-toggle="modal" data-target="#myModal">
                <button type="button" class="btn btn-danger btn-sm" data-placement="top">
                    加载样式 
                </button>
            </a>
            <p style="margin-top:20px;">
                <a class="btn btn-success" id="show-success-message" href="#">提示</a>
            </p>
        </div>
    </div>
      <div id="myModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
            <div class="modal-dialog modal-load">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">加载中</h5>
                    </div>
                    <div class="modal-body">
                        <div class="loader animated fadeIn handle">
                            <span class="spinner">
                                <i class="fa fa-spinner fa-spin"></i>
                            </span>
                        </div>
                    </div>

                </div><!-- /.modal-content -->
            </div>
        </div>
    {{/replace}}

    {{#append "scripts"}}
        <!-- page libs -->
        <script src="lib/messenger/build/js/messenger.js"></script>
        <script src="lib/messenger/build/js/messenger-theme-flat.js"></script>
        <!-- demo-only libs -->
        <script src="lib/backbone/backbone.js"></script>
        <script src="lib/messenger/docs/welcome/javascripts/location-sel.js"></script>

        <!-- page application js -->
        <script src="js/ui-notifications.js"></script>

    {{/append}}

{{/extend}}


