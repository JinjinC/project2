{{#extend "layoutMob"}}

    {{#replace "sidebarMob"}}
        {{> sidebarMob this conditionClass=conditionClass active="infoMob"}}
    {{/replace}}

    {{#replace "app_content"}}
     
     <div class="row">
         <div class="col-lg-5 col-md-5">
             <h2 class="page-title">
             <span>应用信息 <small>app 信息</small></span>
             </h2>
         </div>
     </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="row">
                <div class="col-md-12">
                    <section class="widget">
                    <div class="body no-margin">
                        <table class="table no-margin sources-table">
                            <thead>
                                <tr>
                                    <th width="48%" style="text-align: left;" class="sortedth">
                                        <span class="sortedtext">名称</span>
                                        <i class="sortedup" style="display:none"></i>
                                        <i class="sorteddown" style="display:none"></i>
                                    </th>
                                    <th class="sortedth" width="10%" style="text-align: left;">
                                        <span class="sortedtext">响应时间</span>
                                        <i class="sortedup" style="display:none"></i>
                                        <i class="sorteddown" style="display:none"></i>
                                    </th>
                                    <th class="sortedth" width="10%" style="text-align: left;">
                                        <span class="sortedtext">吞吐量(cpm)</span>
                                        <i class="sortedup" style="display:none"></i>
                                        <i class="sorteddown" style="display:none"></i>
                                    </th>
                                    <th class="sortedth" width="10%" style="text-align: left;">
                                        <span class="sortedtext">错误率</span>
                                        <i class="sortedup" style="display:none"></i>
                                        <i class="sorteddown" style="display:none"></i>
                                    </th>
                                    <th width="3%"></th>

                                </tr>
                            </thead>
                            <tbody>
                                <tr class="tre">
                                    <td >for android</td>
                                    <td >0 ms</td>
                                    <td >0.0</td>
                                    <td >0.00%</td>                                  
                                    <td style="text-align: center !important; padding: 8px 0">
                                        <a href="#" data-toggle="modal" data-target="#myModal">
                                            <i class="glyphicon glyphicon-cog icon2 setting" id="icon-setting" style="display:none">
                                            </i>
                                        </a>
                                    </td>
                                </tr> 
                                 
                            </tbody>
                        </table>
                    </div>
                </section>
                     

                </div>
            </div>
        </div>
    </div>

    <div id="myModal" class="modal fade account-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title" id="myModalLabel">修改APP名称</h4>
                </div>
                <div class="modal-body">
                   <div class="row">
                       <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8 col-lg-offset-2 col-md-offset-2 col-sm-offset-2 col-xs-offset-2">
                           <form class="form-horizontal form-label-left">
                               <div class="form-group">
                                   <div class="row">
                                        <div class="col-sm-4 col-lg-4 col-md-4 col-sm-offset-1 col-lg-offset-1 col-md-offset-1">
                                            <label for="account-name" class="control-label">输入app名称</label>
                                        </div>
                                        <div class="col-sm-6 col-lg-6 col-md-6">
                                            <input id="account-name" class="form-control form-input-white" required="required" type="text" value="" name="account-name" data-parsley-trigger="change">
                                            <p class="validation-message" id="account-error">该项不能为空</p>
                                        </div>                                         
                                   </div>
                               </div>
                           </form>
                       </div>
                   </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger pull-left">隐藏</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal" id="btn-trans-close">取消</button>
                    <button type="button" class="btn btn-success" id="btn-trans">确定</button>
                </div>

            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div>


    
       
       
    {{/replace}}

     {{#append "scripts"}}
        <!-- page libs -->
        <script src="lib/slimScroll/jquery.slimscroll.min.js"></script>
        <script src="lib/jquery.sparkline/index.js"></script>

        <script src="lib/backbone/backbone.js"></script>
        <script src="lib/backbone.localStorage/backbone.localStorage-min.js"></script>

        <script src="lib/d3/d3.min.js"></script>
        <script src="lib/nvd3/nv.d3.min.js"></script>

        <script src="lib/jquery-ui/ui/core.js"></script>
        <script src="lib/jquery-ui/ui/widget.js"></script>
        <script src="lib/jquery-ui/ui/mouse.js"></script>
        <script src="lib/jquery-ui/ui/sortable.js"></script>
        <script src="lib/jquery.nestable/jquery.nestable.js"></script>
        <script src="lib/jquery-ui-touch-punch/jquery.ui.touch-punch.min.js"></script>

        <!-- page application js -->
        <script src="js/component-list-groups.js"></script>

        <!-- daterange picker js -->
         <script src="lib/form-daterangepicker/daterangepicker.js"></script>        
         <!-- DateTime Picker -->
        <script src="lib/form-daterangepicker/moment.min.js"></script> 

        <!-- page application js -->
        <script src="js/daterangepicker.js"></script>
        <script src="js/graph/graph2.js"></script>
        <script src="js/graph/graph3.js"></script>


        <script>
           
            $('#appOption').hide();
            $('#divider').hide();
            $('#settings').hide();
            $('#divider1').hide();
            $("li").tooltip();

            $('th').click(function(e){
                var a = $(this).find('.sortedup');
                var b = $(this).find('.sorteddown');

                if (a.css('display') == 'none' && b.css('display') == 'none') {
                    a.show();
                }else{
                    if (a.css('display') != 'none') {
                        a.hide();
                        b.show();
                    }else{
                        if (a.css('display') == 'none') {
                            b.hide();
                        }
                    }
                }
                e.stopPropagation();
            })

            $('tr').mouseover(function(){
                $(this).find('.setting').show();
            })

            $('tr').mouseout(function(){
               $(this).find('.setting').hide();
            })

           

            $('#icon-setting').click(function(){
                $('#settingBox').show();
            })
            $('#closesettingBox').click(function(){
                $('#settingBox').hide();
            })
           
           

            $('#plusOracle').click(function(){
                if ($('.tre1').css('display') == 'none') {
                    $('.tre1').css('display','table-row');
                    $('#plusOracle').hide();
                    $('#minusOracle').show();
                }
            })
            $('#minusOracle').click(function(){
                if ($('.tre1').css('display') != 'none') {
                   $('.tre1').css('display','none');
                    $('#minusOracle').hide();
                    $('#plusOracle').show();
                }
            })

            $('#plusOracle1').click(function(){
                if ($('.tre2').css('display') == 'none') {
                    $('.tre2').css('display','table-row');
                    $('#plusOracle1').hide();
                    $('#minusOracle1').show();
                }
            })
            $('#minusOracle1').click(function(){
                if ($('.tre2').css('display') != 'none') {
                   $('.tre2').css('display','none');
                    $('#minusOracle1').hide();
                    $('#plusOracle1').show();
                }
            })

            $('#plusOracle2').click(function(){
                if ($('.tre3').css('display') == 'none') {
                    $('.tre3').css('display','table-row');
                    $('#plusOracle2').hide();
                    $('#minusOracle2').show();
                }
            })
            $('#minusOracle2').click(function(){
                if ($('.tre3').css('display') != 'none') {
                   $('.tre3').css('display','none');
                    $('#minusOracle2').hide();
                    $('#plusOracle2').show();
                }
            })
            

        </script>
   
    {{/append}}

{{/extend}}